@model Ajanvarausprojekti.Models.Ajat

<div class="modal fade" id="ModalDelete" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="container">
                <div class="row">
                    <div class="col mt-1 ms-2 me-0 pe-0 pb-5">
                        <div class="d-flex justify-content-end align-items-end">
                            <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-header border-0 d-flex flex-column justify-content-center align-items-center text-center">
                            <h5 class="modal-title"><img src="~/Content/Images/careerian-tiviohjaus-logo.png" class="d-flex justify-content-center align-items-center w-75 h-auto" alt="Careerian Tivi-ohjaus Logo" aria-label="Careerian Tivi-Ohjaus"><span class="fw-light pt-3 fs-6 text-uppercase">Opettajille</span></h5>
                            <h3>Haluatko varmasti poistaa ajan?</h3>
                        </div>

                        <div class="modal-body mt-3">
                            <div>
                                <h4>Aika</h4>
                                <hr />
                                <dl class="dl-horizontal">
                                    <dt>
                                        @Html.DisplayNameFor(model => model.alku_aika)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.alku_aika)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.aihe)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.aihe)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.paikka)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.paikka)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Kestot.kesto_id)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Kestot.kesto_id)
                                    </dd>

                                    <dt>
                                        @Html.DisplayNameFor(model => model.Opettajat.sahkoposti)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Opettajat.sahkoposti)
                                    </dd>

                                </dl>


                            </div>
                            <div class="modal-footer">
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Delete" class="btn btn-default" /> |
                                        @Html.ActionLink("Back to List", "Index")
                                    </div>
                                }
                                @*Formin lähettävä button*@
                                <button type="submit" value="Delete" class="btn btn-primary" @*form="deleteForm"*@>poista</button>
                                @*Kontrollerin kutsu, jotta peruutus johtaa alkutilanteeseen*@
                                <a href="@Url.Action("_VapaatAjat", "Ajat")" class="btn btn-primary">peruuta</a>
                            </div>

                        </div>
                    </div>
                    <div class="col-5 d-none d-sm-block pe-0">
                        <img src="~/Content/Images/tools.png" class="img-fluid h-100 w-auto" alt="Alternate Text" />
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

