@model IEnumerable<Ajanvarausprojekti.ViewModels.ajatListaData>

<section class="container-fluid bg-black pt-lg-3 pb-5 ">
    <div class="container pt-5">
        <div class="col-12 table-responsive-md">
            <div class="d-flex justify-content-between w-100">
                <h2 class="text-white pb-5">Varattavissa olevat vapaat ajat</h2>
            </div>
            <table class="table table-dark table-hover caption table-bordered">
                <caption class="text-white-50">Varattavissa olevat vapaat ajat</caption>
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Päivämäärä</th>
                        <th scope="col">Kellonaika</th>
                        <td scope="col"></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr class="valitseRivi" data-aikaId="@item.aika_id">
                            <td scope="row">@Html.ValueFor(model => item.Alkuaika, "{0:dd.MM.yyyy}")</td>
                            <td>@Html.ValueFor(modelItem => item.Alkuaika, "{0:HH:mm}") - @Convert.ToDateTime(item.Alkuaika).AddMinutes(item.Kesto).ToString("HH:mm")</td>
                            @*Buttoni joka vie ajan poistoon*@
                            <td> <button class="btn btn-primary ms-1"> @Html.ActionLink("Poista", "AjatDelete", new { id = item.aika_id })</button> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>
