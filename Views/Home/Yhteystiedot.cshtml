@{
    ViewBag.Title = "Yhteystiedot";
}

<section class="container-fluid vh-100 bg-hero-contact pb-sm-5 pt-sm-0">
    <div class="container py-md-5">
        <div class="pt-md-5">
            <div class="d-flex flex-column justify-content-start align-items-start text-start">
                <p class="pt-5 text-primary text-uppercase mb-0">@ViewBag.SivustonNimi</p>
                <h1 class="display-3 fw-bold text-black ps-0">Yhteystiedot</h1>
                <p class="lead text-black">@ViewBag.SivustonNimi-palvelun ylläpidosta vastaa @ViewBag.YllapitoyhtTiedot</p>
                <address class="">
                    <div class="d-flex">
                        <strong class="lead fw-bolder">Email:</strong><a href="mailto:@ViewBag.EmailYhteystiedot" class="lead ms-1 text-decoration-none text-black">@ViewBag.EmailYhteystiedot</a>
                    </div>
                   @if (ViewBag.Puhnro != "") { 
                    <div class="d-flex mt-2">
                        <strong class="lead fw-bolder">Puhelin:</strong><p class="lead ms-1 text-black">@ViewBag.Puhnro</p>
                    </div>}
                </address>
            </div>
        </div>
    </div>
</section>