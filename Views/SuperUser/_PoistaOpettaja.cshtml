@model Ajanvarausprojekti.Models.Opettajat

<!-- Modal -->
<div class="modal fade" id="ModalOpettajaPoisto" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    @*Täällä määritellään modaalikoon. Nyt Modal max-width on 500px. Jos haluaa 800px modaali-ikkunan: modal-lg . Jos 300px lisää modal-sm*@
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="container">
                <div class="row">
                    <div class="col mt-1 ms-2 me-0 pe-0 pb-5">
                        <div class="d-flex justify-content-end align-items-end">
                            <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close" onclick="window.location.reload()"></button>
                        </div>
                        <div class="modal-header border-0 d-flex flex-column justify-content-center align-items-center text-center">
                            <h5 class="modal-title"><img src="~/Content/Images/careerian-tiviohjaus-logo.png" class="d-flex justify-content-center align-items-center w-75 h-auto" alt="Careerian Tivi-ohjaus Logo" aria-label="Careerian Tivi-Ohjaus"><span class="fw-light pt-3 fs-6 text-uppercase">Opettajille</span></h5>
                        </div>

                        <div class="modal-body mt-3">
                            <div>
                                <h4>Olet poistamassa opettajan</h4>
                                <dl class="dl-horizontal">

                                    <dt>
                                        @Html.DisplayFor(model => model.nimike)
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.etunimi)  @Html.DisplayFor(model => model.sukunimi)
                                    </dd>

                                </dl>
                                @using (Html.BeginForm())
                                {
                                    @Html.AntiForgeryToken()

                                    <div class="form-actions no-color">
                                        <input type="submit" value="Poista opettaja" class="btn btn-primary"/>
                                    </div>
                                }
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>