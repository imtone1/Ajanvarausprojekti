@model Ajanvarausprojekti.Models.Varaukset

@{
    ViewBag.Title = "Onnistunut varaus";
}
@section Scripts{
    <script type="text/javascript">
        function LinkinKopioiminen() {
            /* Get the text field */
            var copyText = document.getElementById("TeamsLinkki");
            /* Select the text field */
            copyText.select();
            copyText.setSelectionRange(0, 99999); /* For mobile devices */
            /* Copy the text inside the text field */
            navigator.clipboard.writeText(copyText.value);
            /* Alert the copied text */
            alert("Kopioitu linkki: " + copyText.value);
        }
    </script>
}
<div class="container-fluid h-50 pt-5 pt-lg-4 pb-lg-4 bg-success">
    <div class="container mt-5">
        <div class="d-flex flex-column text-white">
            <svg xmlns="http://www.w3.org/2000/svg" width="2.8em" height="2.8em" fill="currentColor" class="bi bi-check-circle mb-2" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
            </svg>
            <h1 class="display-5">Ohjausaikavarauksen lähetys onnistui.</h1>
            <p class="lead fs-4">Saat pian antamaasi sähköpostiosoitteeseen varausvahvistuksen. <br />Mikäli et ole antanut sähköpostiosoitettasi, kirjoitathan alla olevat tiedot talteen.</p>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="d-flex flex-column">
        <div class="row">
            <div class="col-12 col-md-7 bg-light py-3 px-rounded-3">
                <h2 class="d-flex flex-column pb-1 ms-0 ps-0 fs-3">Varauksen tiedot</h2>
                <dl class="row row-cols-1 row-cols-md-2">
                    <dt class="col-4">
                        Varaamasi ohjausaika
                    </dt>

                    <dd class="col-7">
                        @*@Html.DisplayFor(model => model.Ajat.alku_aika)*@
                        @Session["aika"] - @Session["loppuaika"]

                    </dd>
                    <!--<dt class="col-sm-4">
                        Ohjausajan kesto
                    </dt>

                    <dd class="col-sm-7">-->
                    @*@Html.DisplayFor(model => model.Ajat.kesto_id)
                        <!--@Session["kesto"]
                                    </dd>*@

                    <dt class="col-4">
                        Varaaja
                    </dt>

                    <dd class="col-7">
                        @Session["varaaja"]@*@Html.DisplayFor(model => model.varaaja_sahkoposti)*@
                    </dd>

                    <dt class="col-4">
                        Ohjausajan aihe
                    </dt>

                    <dd class="col-7">
                        @Session["aihe"] @*@Html.DisplayFor(model => model.aihe)*@
                    </dd>

                    <dt class="col-4">
                        Teams-kokouslinkki
                    </dt>

                    <dd class="col-7">

                        <a href="@Session["paikka"]" target=”_blank” class="fs-4 btn btn-outline-success mb-3">
                            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-box-arrow-up-right pb-1" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
                                <path fill-rule="evenodd" d="M8.636 3.5a.5.5 0 0 0-.5-.5H1.5A1.5 1.5 0 0 0 0 4.5v10A1.5 1.5 0 0 0 1.5 16h10a1.5 1.5 0 0 0 1.5-1.5V7.864a.5.5 0 0 0-1 0V14.5a.5.5 0 0 1-.5.5h-10a.5.5 0 0 1-.5-.5v-10a.5.5 0 0 1 .5-.5h6.636a.5.5 0 0 0 .5-.5z" />
                                <path fill-rule="evenodd" d="M16 .5a.5.5 0 0 0-.5-.5h-5a.5.5 0 0 0 0 1h3.793L6.146 9.146a.5.5 0 1 0 .708.708L15 1.707V5.5a.5.5 0 0 0 1 0v-5z" />
                            </svg>
                        Siirry kokoukseen</a>
                        <div>
                            <label for="TeamsLinkki">Kopioi kokouslinkki leikepöydälle</label>
                            <div class="d-flex mw-100 col-12 mt-1">
                                <input type="text" value="@Session["paikka"]" id="TeamsLinkki" class="form-control form-control-color me-1 w-50 py-0 bg-white" aria-label="kopioitavissa oleva linkki ohjausajan Teams-kokoukseen" readonly>
                                <button onclick="LinkinKopioiminen()" class="btn btn-success">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="1.2em" height="1.2em" fill="currentColor" class="bi bi-clipboard-check" viewBox="0 0 16 16" aria-hidden="true" focusable="false">
                                        <path fill-rule="evenodd" d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                        <path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1v-1z" />
                                        <path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5h3zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3z" />
                                    </svg>
                                    <span class="visually-hidden">Kopioi linkki leikepöydälle</span> <!--Tämä on screen readereitä varten "salainen" otsikko joka kertoo pelkän iconin sisältävän buttonin tarkoituksen-->
                                </button>
                            </div>
                        </div>
                    </dd>

                    <dt class="col-4">
                        Varauksen peruutuskoodi
                    </dt>

                    <dd class="col-7">
                        @Session["varausnro"]@*@Html.DisplayFor(model => model.id_hash)*@
                    </dd>
                </dl>@*@Html.DisplayFor(model => model.Ajat.paikka)*@
            </div>
            <div class="col-md-5">
                <img src="~/Content/Images/people.jpg" alt="Kolme ihmistä istuu portailla läppärin kanssa" class="img-fluid opacity-75 rounded-3 mh-100" />
            </div>
        </div>
    </div>
    <div class="my-4">
        <a href="/Home/Index" class="btn btn-primary text-decoration-none" role="button" aria-pressed="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-chevron-left me-1" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
            </svg>
            Takaisin etusivulle
        </a>
    </div>
</div>
