@model Ajanvarausprojekti.Models.Varaukset

@{
    ViewBag.Title = "Onnistunut varaus";
}

<div class="container-fluid h-50 pt-5 pt-lg-3 pb-lg-3" style="background-color: #2CDA94;">
    <div class="container mt-5">
        <div class="d-flex flex-column text-white">
            <svg xmlns="http://www.w3.org/2000/svg" width="2.8em" height="2.8em" fill="currentColor" class="bi bi-check-circle mb-2" viewBox="0 0 16 16">
                <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
                <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z" />
            </svg>
            <h1 class="display-5">Ohjausaikavarauksen lähetys onnistui.</h1>
            <p class="lead">Saat pian antamaasi sähköpostiosoitteeseen varausvahvistuksen. <br />Mikäli et ole antanut sähköpostiosoitettasi, kirjoitathan alla olevat tiedot talteen.</p>
        </div>
    </div>
</div>

<div class="container mt-4">
    <div class="d-flex flex-column">
        <div class="row">
            <div class="col-md-7 bg-light p-5 rounded-3">
                <h4 class="d-flex flex-column pb-1">Varauksen tiedot</h4>
                <dl class="row">
                    <dt class="col-sm-4">
                        Varaamasi ohjausaika
                    </dt>

                    <dd class="col-sm-7">
                        @*@Html.DisplayFor(model => model.Ajat.alku_aika)*@
                        @Session["aika"] - @Session["loppuaika"]

                    </dd>
                    <!--<dt class="col-sm-4">
        Ohjausajan kesto
    </dt>

    <dd class="col-sm-7">-->
                    @*@Html.DisplayFor(model => model.Ajat.kesto_id)
        <!--@Session["kesto"]
                    </dd>*@

                    <dt class="col-sm-4">
                        Varaaja
                    </dt>

                    <dd class="col-sm-7">
                        @Session["varaaja"]@*@Html.DisplayFor(model => model.varaaja_sahkoposti)*@
                    </dd>

                    <dt class="col-sm-4">
                        Ohjausajan aihe
                    </dt>

                    <dd class="col-sm-7">
                        @Session["aihe"] @*@Html.DisplayFor(model => model.aihe)*@
                    </dd>

                    <dt class="col-sm-4">
                        Paikka/paikkalinkki
                    </dt>

                    <dd class="col-sm-7">
                        <a href="@Session["paikka"]">Suora linkki Teams-kokoukseen</a>
                        <p>@Session["paikka"]</p>
                    </dd>

                    <dt class="col-sm-4">
                        Varauksen peruutuskoodi
                    </dt>

                    <dd class="col-sm-7">
                        @Session["varausnro"]@*@Html.DisplayFor(model => model.id_hash)*@
                    </dd>
                </dl>@*@Html.DisplayFor(model => model.Ajat.paikka)*@
            </div>
            <div class="col-md-5">
                <img src="~/Content/Images/people.jpg" alt="Kolme ihmistä istuu portailla läppärin kanssa" class="img-fluid opacity-75 rounded-3" />
            </div>
        </div>
    </div>
    <div class="my-4">
        <a href="/Home/Index" class="btn btn-primary text-decoration-none" role="button" aria-pressed="false">
            <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-chevron-left me-1" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M11.354 1.646a.5.5 0 0 1 0 .708L5.707 8l5.647 5.646a.5.5 0 0 1-.708.708l-6-6a.5.5 0 0 1 0-.708l6-6a.5.5 0 0 1 .708 0z" />
            </svg>
            Takaisin etusivulle
        </a>
    </div>
</div>
