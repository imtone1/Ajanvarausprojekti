@model Ajanvarausprojekti.Models.Varaukset


<div class="container">

    <!-- Modal -->
    <div class="modal fade" id="VarausRuutu" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="container">
                    <div class="row">
                        <div class="col mt-1 ms-2 me-0 pe-0 pb-5">
                            <div class="d-flex justify-content-end align-items-end mt-1">
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Sulje ikkuna"></button>
                            </div>
                            <div class="modal-header border-0 d-flex flex-column justify-content-center align-items-center text-center">

                                <p class="modal-title"><img src="~/Content/Images/careerian-tiviohjaus-logo.png" class="d-flex justify-content-center align-items-center w-75 h-auto" alt="Careerian Tivi-ohjaus Logo" aria-label="Careerian Tivi-Ohjaus"></p>

                            </div>

                            <div class="modal-body mt-3">
                                @using (Html.BeginForm("VarausPoisto", "Varaus", FormMethod.Post, new { id = "varausForm" }))
                                {
                                    @Html.AntiForgeryToken()

                                <div class="form-horizontal">
                                    <h4>Varauksen peruutus</h4>

                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                    @Html.HiddenFor(model => model.varaus_id)

                                    <div class="form-group">
                                        <label class="control-label col-md-8" for="id_hash">Varausvahvistuksessa saamasi poistokoodi</label>
                                        <div class="col-md-10">
                                            @Html.EditorFor(model => model.id_hash, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.id_hash, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <p class="text-danger">
                                       @* Mahd. virheilmoitus tähän *@
                                    </p>

                                </div>
                                }
                            
                                <button type="submit" form="varausForm" class="btn btn-primary">Peruuta varaus</button>

                             
                            </div>
                        </div>
                        <div class="col-5 d-none d-sm-block pe-0">
                            <img src="~/Content/Images/tools.png" class="img-fluid h-100 w-auto" alt="Alternate Text" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>

