<!-- Modal -->
<div class="modal fade" id="ModalOrderEdit" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="container">
                <div class="row">
                    <div class="col mt-1 ms-2 me-0 pe-0 pb-5">
                        <div class="d-flex justify-content-end align-items-end">
                            <button type="button" class="btn-close " data-bs-dismiss="modal" aria-label="Close" onclick="window.location.reload()"></button>
                        </div>
                        <div class="modal-header border-0 d-flex flex-column justify-content-center align-items-center text-center">
                            <h5 class="modal-title"><img src="~/Content/Images/careerian-tiviohjaus-logo.png" class="d-flex justify-content-center align-items-center w-75 h-auto" alt="Careerian Tivi-ohjaus Logo" aria-label="Careerian Tivi-Ohjaus"><span class="fw-light pt-3 fs-6 text-uppercase">Opettajille</span></h5>
                        </div>

                        <div class="modal-body mt-3">
                            <div>
                                <h4>Varaus @Html.DisplayFor(model => model.Ajat.alku_aika) <a href="@Html.DisplayFor(model => model.Ajat.paikka)" class="btn btn-primary ms-3 mt-3">Linkki Teams-kokoukseen</a></h4>
                                <dl class="dl-horizontal">

                                    <dt>
                                       Varaaja
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.varaaja_sahkoposti)
                                    </dd>

                                    <dt>
                                        Alkuaika
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Ajat.alku_aika)
                                    </dd>

                                    <dt>
                                       Kesto
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.Ajat.kesto_id)
                                    </dd>

                                    <dt>
                                       Aihe
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.aihe)
                                    </dd>
                                    <dt>
                                        Paikka/Paikkalinkki
                                    </dt>

                                    <dd><a href="@Html.DisplayFor(model => model.Ajat.paikka)" class="btn btn-primary ms-3 mt-3">Linkki Teams-kokoukseen</a>
                                     
                                    </dd>
                                    <dt>
                                        Varattu pvm
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.varattu_pvm)
                                    </dd>


                                    <dt>
                                        Varauksen peruutukseen tarvittava salasana
                                    </dt>

                                    <dd>
                                        @Html.DisplayFor(model => model.id_hash)
                                    </dd>

                                </dl>
                            </div>
                           
                        </div>
                    </div>
                    @* Kuva *@
                    @*<div class="col-5 d-none d-sm-block pe-0">
                        <img src="~/Content/Images/tools.png" class="img-fluid h-100 w-auto" alt="Alternate Text" />
                    </div>*@
                </div>
            </div>

        </div>
    </div>
</div>